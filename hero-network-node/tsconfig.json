{
    "compilerOptions": {
    "target": "ES2022",                      /* Specifies the ECMAScript target version */
    "module": "ES2022",                 /* Specifies module code generation */
    "outDir": "./dist",                   /* Output directory for compiled files */
    "strict": true,                       /* Enable all strict type-checking options */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",           /* Specifies module resolution strategy */
    "resolveJsonModule": true,
    "sourceMap": true,                 /* Generates corresponding .map files */
    },
    "include": [
      "src/**/*.ts"                        /* Specifies the files to include in compilation */
    ],
    "exclude": [
      "node_modules"                        /* Specifies the files to exclude from compilation */
    ]
  }